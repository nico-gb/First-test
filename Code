keep_going = True
while keep_going:
    user_choice = input("Rock, Paper, Scissors ")
    if user_choice == 'Rock':
        print("Computer chooses paper. You lose")
    elif user_choice == 'Paper':
        print("Computer chooses scissors. You lose")
    elif user_choice == 'Scissors':
        print("Computer chooses rock. You lose")
    else:
        print("Computer picks knife. You lose.")
    print ("Time to play again!")
    
    
    keep_going = True
my_list = []
while keep_going:
    number = input("Enter a number")
    if number == 'stop' or number == 'Stop':
        keep_going = False
    else:
        number = int(number)
        my_list.append(number)
average = sum(my_list) / len (my_list)
print(average)


